@{
}
@model List<EFDemo.Models.Domain.Employee>

<h2>All Employees List using Entity Framework</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Number</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.Name</td>
            <td>@emp.Email</td>
            <td>@emp.Age</td>
            <td>@emp.Number</td>

            <td> <a button type="button" class="btn btn-dark" asp-area="" asp-controller="Employees" asp-action="Edit" asp-route-id="@emp.Id">Edit</a></td>
            


            <td> <a button type="button" class="btn btn-danger" asp-area="" asp-controller="Employees" asp-action="Delete" asp-route-id="@emp.Id">Delete</a></td>
        </tr>


    }


</table>